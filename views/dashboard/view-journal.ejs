<div class="container-fluid container-fluid-custom pb-5 mb-5 view-journal">
    <!------- header ------->
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">
                        <%= journal.title %>
                    </li>
                </ol>
            </nav>

            <div class="col d-flex justify-content-end align-items-center">

                <!-- delete jourbal button (link to delete journal modal) -->
                <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" id="deleteButton"
                    data-bs-target="#deleteModal">Detele</button>
            </div>
        </div>
    </div>

    <!------- update/view journal area ------->
    <!-- method override -->
    <form action="/dashboard/item/<%= journalID %>?_method=PUT" method="POST" class="position-relative">

        <div class="form-group mb-1">
            <input type="text" class="journal-title-font form-control fw-bold border-0 fs-4" id="title" name="title"
                value="<%= journal.title%>" placeholder="Title" style="background-color: #E5D1FA05; border: none;"
                required>
        </div>

        <div class="mb-4">
            <textarea name="body" id="body" cols="30" rows="12" placeholder="Write your journal..."
                class="form-control fs-4 journal-font" style="background-color: #E5D1FA05; border: none;"
                required><%= journal.body%></textarea>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>

</div>

<!------- delete journal modal ------->
<div class="modal fade" tabindex="-1" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">You are about to delete a journal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>This will delete your journal <b class="fw-bold">
                        "<%= journal.title%>"
                    </b><br />
                    Are you sure?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                <form action="/dashboard/item-delete/<%= journalID %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete journal</button>
                </form>

            </div>
        </div>
    </div>
</div>