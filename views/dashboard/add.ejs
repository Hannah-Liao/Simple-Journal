<div class="container-fluid container-fluid-custom pb-5 mb-5 writing-area">

    <!------- header ------->
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Write journal</li>
                </ol>
            </nav>

        </div>
    </div>

    <!------- writing area ------->
    <div class="d-flex justify-content-between">
        <div class="add-Journal">
            <form action="/dashboard/add" method="POST" class="position-relative">
                <div class="form-group mb-4 position-absolute" style="left: 1px; top: 1px; right: 1px;">

                    <input type="text" class="journal-title-font form-control fw-bold border-0 fs-4" id="title"
                        name="title" value="" required placeholder="Enter your title"
                        style="background-color: #E5D1FA05; border: none;">
                </div>

                <div class="form-group mb-4">
                    <textarea name="body" id="body" cols="30" rows="15" placeholder="Write your journal..."
                        class="form-control pt-5 fs-4 journal-text-area journal-font"
                        style="background-color: #E5D1FA05; border: none;" required></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Post</button>
                </div>
            </form>
        </div>

        <!------- Random Quote ------->
        <div class="ml-2 quote-hidden">
            <div class="card quote">
                <div class="card-body">
                    <h5 class="card-title quote-title">Quote of the day</h5>
                    <p class="card-text quote-text">
                        " <%= content %> "
                    </p>
                    <div class="author">
                        <h6 class="card-subtitle mb-2 text-muted">
                            By <%= author %>
                        </h6>
                    </div>

                </div>
            </div>
        </div>

    </div>


</div>